<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_movie_details">

    <TextView
        android:id="@+id/movie_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
        tools:text="фантастика, боевик" />

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
        tools:text="Матрица" />

    <TextView
        android:id="@+id/movie_title_original"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        tools:text="The Matrix" />

    <TextView
        android:id="@+id/movie_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
        tools:text="«Добро пожаловать в реальный мир»" />

    <LinearLayout
        android:id="@+id/movie_release_date_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_release_date_description"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />

        <TextView
            android:id="@+id/movie_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            tools:text="1999" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/movie_length_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_length_description"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />

        <TextView
            android:id="@+id/movie_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            tools:text="2 ч. 16 мин." />

    </LinearLayout>

</LinearLayout>
